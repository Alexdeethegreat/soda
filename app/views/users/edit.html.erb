<%= render  'shared/header' %>
    <div id='custom' class="edit-form">
        <%= simple_form_for @current_user do |f| %>
        <!-- NAME -->
         <div id='name' class="row">
                <div class="col-xs-8 col-sm-offset-3 col-md-offset-4 col-md-7 col-lg-offset-7 col-lg-5">
                    <%= f.input :name, allow_blank: true %>
                </div>
            </div>
            <!-- EMAIL -->
            <div id='update_email' class="row">
                <div class="col-xs-8 col-sm-offset-3 col-md-offset-4 col-md-7 col-lg-offset-7 col-lg-5">
                    <%= f.input :email, required: false %>
                </div>
            </div>
            <!-- PASSWORD -->
            <div id='pass' class="row">
                <div class="col-xs-8 col-sm-offset-3 col-md-offset-4 col-md-7 col-lg-offset-7 col-lg-5">
                    <%= f.input :password, required: false, placeholder: 'Please type your password' %>
                </div>
            </div>
            <!-- CONFIRM PASSWORD -->
            <div id='pass_conf' class="row">
                <div class="col-xs-8 col-sm-offset-3 col-md-offset-4 col-md-7 col-lg-offset-7 col-lg-5">
                    <%= f.input :password_confirmation, required: false, placeholder: 'Please confirm your password' %>
                </div>
            </div>
            <!-- GENRE -->
            <div id='genre' class="row">
                <div class="col-xs-8 col-sm-offset-3 col-md-offset-4 col-md-7 col-lg-offset-7 col-lg-5">
                    <%= f.input :genre,allow_blank: true, placeholder: 'Type your favorite genre'  %>
                </div>
            </div>
            <!-- LOCATION -->
            <div class="row">
                <div id='location' class="col-xs-8 col-sm-offset-3 col-md-offset-4 col-md-7 col-lg-offset-7 col-lg-5">
                    <%= f.input :location,allow_blank: true, placeholder: 'Where do you live?' %>
                </div>
            </div>
            <!-- IMAGE -->
            <div class="row">
                <div id='img' class="col-xs-8 col-sm-offset-3 col-md-offset-4 col-md-7 col-lg-offset-7 col-lg-5">
                    <%= f.input :image_url,allow_blank: true  %>            
                    <%= f.button :submit %> </span>
                    <% end %>

                </div>
            </div>